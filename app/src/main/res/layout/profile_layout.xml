<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/bg_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_my_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@mipmap/me_settings"/>
            <ImageView
                android:id="@+id/iv_my_sao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@mipmap/icon_scan"/>
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_my_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            fresco:backgroundImage="@mipmap/me_avatar_girl"/>
            <!--fresco:roundAsCircle="true"-->
            <!--fresco:roundingBorderColor="#fafafa"-->
            <!--fresco:roundingBorderWidth="2dp"/>-->
        <TextView
            android:id="@+id/tv_my_name1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my_logo"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="#504f4f"
            android:text="234"/>
    </RelativeLayout>
</LinearLayout>