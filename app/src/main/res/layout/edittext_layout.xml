    android:layout_margin="5dp"
    android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="发送"
        android:padding="5dp"
        />
</LinearLayout>
