<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_Group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/rb_style"
            android:drawableTop="@drawable/rb_home_selecter"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/rb_hot"
            style="@style/rb_style"
            android:drawableTop="@drawable/rb_select_selecter"
            android:text="热门"/>
        <RadioButton
            android:id="@+id/rb_category"
            style="@style/rb_style"
            android:drawableTop="@drawable/rb_category_selecter"
            android:text="分类"/>
        <RadioButton
            android:id="@+id/rb_profile"
            style="@style/rb_style"
            android:drawableTop="@drawable/rb_profile_selecter"
            android:text="我的"/>
    </RadioGroup>

</RelativeLayout>
