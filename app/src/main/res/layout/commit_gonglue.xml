<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_com_top"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#e11d15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_act_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="评论" />
    </LinearLayout>
    <org.qfln.android_wuyue.pulltorefresh.PullToRefreshListView
        android:id="@+id/pullrefresh_com"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_com_top"
        android:layout_marginBottom="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ddd">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:hint="我也说几句"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:text="发送"/>
    </LinearLayout>
</RelativeLayout>