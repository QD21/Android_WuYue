<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_my_login"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:background="@drawable/bg_stroke_white"/>

    <ImageView
        android:id="@+id/iv_my_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@mipmap/icon_scan" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_my_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        fresco:backgroundImage="@mipmap/me_avatar_girl"
        fresco:roundAsCircle="true" />
    <!--fresco:roundingBorderColor="#fafafa"-->
    <!--fresco:roundingBorderWidth="2dp"/>-->
    <TextView
        android:id="@+id/tv_my_name1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdv_my_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#504f4f" />

</RelativeLayout>
